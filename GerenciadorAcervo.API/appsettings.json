{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "StringConexao": "data source=.;initial catalog=GerenciadorAcervo;trusted_connection=true;Integrated Security=SSPI;Encrypt=False;"
  },
  "JwtToken": {
    "Segredo": "JKgvJY1YBtmDZ6ggoEeH1SpM9CNeFiygIP_PtfgX_zs",
    "Emissor": "GerenciadorAcervo"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "StringConexao",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "message": {
              "columnName": "Mensagem",
              "AllowNull": true
            },
            "exception": { "columnName": "Excecao" },
            "level": { "columnName": "Nivel" },
            "additionalColumns": [
              {
                "ColumnName": "UsuarioLogado",
                "DataType": "varchar",
                "DataLength": 100,
                "AllowNull": true
              },
              {
                "ColumnName": "Email",
                "DataType": "varchar",
                "DataLength": 100,
                "AllowNull": true
              },
              {
                "ColumnName": "Action",
                "DataType": "varchar",
                "DataLength": 100,
                "AllowNull": true
              },
              {
                "ColumnName": "Controller",
                "DataType": "varchar",
                "DataLength": 100,
                "AllowNull": true
              }              
            ]            
          }
        }        
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]    
  },
  "AllowedHosts": "*"
}
